<%- layout('layouts/main') %>
<br>
<div class="row mb-5"><div class="col-md-8 mx-auto text-center "><h1> <font face = "Times New Roman"> Inventario otros productos</font> </h1></div></div>
<br>
<table class="table table-hover table-striped table-dark">
    <thead>
      <tr>
        <th scope="col">num</th>
        <th scope="col">Nombre</th>
        <th scope="col">Precio</th>
        <th scope="col">Existencia</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
        <% for(var i=0; i < produ.length; i++) {%>
            <tr>
                <td><%= i+1%></td>
                <td><%= produ[i].Nombre %></td>
                <td><%= produ[i].Precio %></td>
                <td><%= produ[i].Existencia %></td>
                <td>
                    <a href="/delete_p/<%= produ[i]._id %>" class="btn btn-danger btn-sm">Eliminar</a>
                    <a href="/editar-producto/<%= produ[i]._id%>" class="btn btn-info btn-sm">Editar</a>
                </td>
            </tr>                   
        <%}%>
  </tbody>
</table>
<div class="row mb-5"><div class="col-md-8 mx-auto text-center "><img src="/static/images/productos_farma.png"  height="250" width="350"/></div></div>